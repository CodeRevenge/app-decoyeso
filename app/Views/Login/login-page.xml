<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="onNavigatingTo">
    <StackLayout id="main" class="clear">
        <StackLayout class="main" id="login">
            <StackLayout class="card">
                <Image class="logo" src="res://logo" />
                <Label class="title" text="DecoYeso"/>
            </StackLayout>
            <ScrollView orientation="vertical" class="card">
                <DockLayout stretchLastChild="true" orientation="vertical">
                    <StackLayout class="input-field" dock="top">
                        <Label class="text-field-tag" text="Usuario"/>
                        <TextField class="input" id="nickname" hint="Usuario"></TextField>
                    </StackLayout>

                    <StackLayout class="input-field" dock="top">
                        <Label class="text-field-tag" text="Contraseña"/>
                        <TextField class="input" id="password" hint="Contraseña" secure="true"></TextField>
                    </StackLayout>

                    <Button text="Iniciar Sesión" class="btn btn-primary" height="80"  tap="Login" dock="top"></Button>

                    <Label text="Si olvidó su contraseña contacte a un administrador." class="min-text" textWrap="true" dock="top"/>
                </DockLayout >
            </ScrollView>
        </StackLayout>
    </StackLayout>
</Page>