<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    
    <StackLayout class="main">
        <StackLayout class="card">
            <Image class="logo" src="res://logo" />
            <Label class="title" text="DecoYeso"/>
        </StackLayout>
        <StackLayout class="card">
            <StackLayout class="input-field">
                <Label class="text-field-tag" text="Usuario"/>
                <TextField class="input" id="nickname"
                 hint="Usuario"></TextField>
            </StackLayout>

            <StackLayout class="input-field">
            <Label class="text-field-tag" text="Contraseña"/>
                <TextField class="input" id="password"
                hint="Contraseña" secure="true"></TextField>
            </StackLayout>

            <Button text="Iniciar Sesión" class="btn btn-primary" tap="Login"></Button>
            <Button text="Registrarse" class="btn btn-secundary"></Button>

            <Label text="Si olvidó su contraseña contacte a un administrador."
            class="min-text" textWrap="true" />
        </StackLayout>
    </StackLayout>
</Page>