<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="onNavigatingTo">
    
    <StackLayout class="main">
        <StackLayout class="card">
            <Label class="title title-m" text="Registro de producto"/>
        </StackLayout>
        <ScrollView orientation="vertical" class="card">
            <DockLayout  stretchLastChild="true" orientation="vertical">
                <StackLayout class="input-field" dock="top">
                    <Label class="text-field-tag" text="Nombre"/>
                    <TextField class="input" id="name"
                    hint="Nombre"></TextField>
                </StackLayout>

                <StackLayout class="input-field" dock="top">
                    <Label class="text-field-tag" text="Descripción"/>
                    <TextView class="input" id="description"
                    hint="Descripción detallada"></TextView>
                </StackLayout>

                <StackLayout class="input-field" dock="top">
                    <Label class="text-field-tag" text="Precio"/>
                    <TextField class="input" id="price"
                    hint="Precio" keyboardType="number"></TextField>
                </StackLayout>

                <StackLayout class="input-field" dock="top">
                    <Label class="text-field-tag" text="Cantidad"/>
                    <TextField class="input" id="quantity"
                    hint="Cantidad" keyboardType="integer"></TextField>
                </StackLayout>

                <Button text="Registrar" class="btn btn-primary" tap="Register" dock="top"></Button>
                <Button text="Atras" class="btn btn-secundary" tap="Back" dock="top"></Button>
            </DockLayout >
        </ScrollView>
    </StackLayout>
</Page>