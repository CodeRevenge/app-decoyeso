<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatingTo="onNavigatingTo">

    <StackLayout class="main">
        <StackLayout class="space"></StackLayout>
        <StackLayout class="card">
            <Label class="title title-m" text="Inventario"/>
        </StackLayout>
        <!-- <ScrollView orientation="vertical" class="card"> -->
        <DockLayout stretchLastChild="true" orientation="vertical">
            <StackLayout orientation="horizontal" class="col-titles card" dock="top">
                <Label text="ID" class="col-title" />
                <Label text="Nombre" class="col-title" />
                <Label text="Cantidad" class="col-title" />
                <Label text="Costo" class="col-title" />
            </StackLayout>
            <ListView id="inventoryList" class="card" style="height:1250px" dock="top" itemTap="onItemTap">
                <ListView.itemTemplate>
                    <FlexboxLayout flexDirection="row">
                        <Label text="{{ id || 'Cargando...' }}" id="id" class="id" horizontalAlignment="left" style="width: 15%" />
                        <Label text="{{ name || 'Cargando...' }}" class="name" horizontalAlignment="left" style="width: 30%" />
                        <Label text="{{ quantity  || 'Cargando...' }}" class="qnty" verticalAlignment="center" style="width: 20%" />
                        <Label text="{{ value || 'Cargando...'  }}" class="cost" verticalAlignment="center" style="width: 30%" />
                    </FlexboxLayout>
                </ListView.itemTemplate>
            </ListView>

            <Button text="Atras" class="btn btn-primary" tap="Back" dock="bottom"></Button>
        </DockLayout >
        <!-- </ScrollView> -->

    </StackLayout>
</Page>